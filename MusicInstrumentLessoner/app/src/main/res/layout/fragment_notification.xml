<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NotificationFragment">

    <hack.the.wap.musicinstrumentlessoner.mylayout.MySearchLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </hack.the.wap.musicinstrumentlessoner.mylayout.MySearchLayout>

    <hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </hack.the.wap.musicinstrumentlessoner.mylayout.MySeparatorLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Notification Fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <hack.the.wap.musicinstrumentlessoner.mylayout.NotificationLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></hack.the.wap.musicinstrumentlessoner.mylayout.NotificationLayout>

        <hack.the.wap.musicinstrumentlessoner.mylayout.NotificationLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></hack.the.wap.musicinstrumentlessoner.mylayout.NotificationLayout>
    </LinearLayout>

</LinearLayout>