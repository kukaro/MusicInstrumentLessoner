        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_template_item_rounded"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAddTemplateActInputMusic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="40dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/input_music" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddTemplateActInputMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/inputMusic"
                    android:text="@string/actAddTemplateInputTemplate" />
            </LinearLayout>

            <EditText
                android:id="@+id/etAddTemplateActInputMusic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_template_item_rounded"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivAddTemplateActInputScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="40dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/input_music_score" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddTemplateActInputScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/inputScore"
                    android:text="@string/actAddTemplateInputTemplate" />
            </LinearLayout>

            <EditText
                android:id="@+id/etAddTemplateActInputScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.9" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>