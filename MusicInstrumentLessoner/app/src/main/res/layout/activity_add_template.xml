                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:maxHeight="40dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/input_image" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddTemplateActInputImage"
